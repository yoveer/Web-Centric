{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "http://api.example.com/profile.json#",
    "type": "string",
    "uniqueItems": true,
    "minItems": 1,
    "items": {
        "type": "object",
        "properties": {
            "ProductID": {
                "type": "string",
                "minLength": 3,
                "maxLength": 20,
                "pattern": "^[a-zA-Z0-9\\-]+(\\s[a-zA-Z0-9\\-]+)*$"
            },
            "Name": {
                "type": "string",
                "minLength": 1,
                "maxLength": 30,
                "pattern": "^[a-zA-Z0-9\\-]+(\\s[a-zA-Z0-9\\-]+)*$"
            },
            "counter": {
                "type": "integer",
                "minimum": 0,
                "maximum": 20
            },
            "Description": {
                "type": "string",
                "minLength": 1,
                "maxLength": 500,
                "pattern": "^[a-zA-Z0-9\\-]+(\\s[a-zA-Z0-9\\-]+)*$"
            }
        },
        "required": [
            "ProductID",
            "Name",
            "counter",
            "Description"
        ],
        "additionalProperties": false
    },
    "additionalProperties": false
}